{
  "name": "@roler/http-utils",
  "version": "0.1.0",
  "type": "module",
  "description": "HTTP boundary validation helpers and benchmarks for Roler",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest --run --coverage",
    "bench": "node ./dist/bench/validate-bench.js"
  },
  "dependencies": {
    "zod": "^3.25.76",
    "@roler/schemas": "workspace:*"
  }
}
