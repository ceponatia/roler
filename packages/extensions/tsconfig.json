{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node", "vitest/globals"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/__tests__/**",
    "test-utils/**",
    "vitest.config.ts",
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../schemas" }
  ]
}