{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "noEmitOnError": true,
  "strict": true,
  "types": ["node", "vitest/globals"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/__tests__/**",
    "test-utils/**",
    "vitest.config.ts"
  ],
  "references": [
    { "path": "../schemas" }
  ]
}
