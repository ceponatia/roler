{
  "name": "@roler/rag",
  "version": "0.1.0",
  "type": "module",
  "description": "Low-latency retrieval orchestration utilities for Roler (R-002)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
  "test": "pnpm -w -F @roler/schemas build && vitest --run --coverage",
  "test:watch": "pnpm -w -F @roler/schemas build && vitest --watch",
  "test:changed": "pnpm -w -F @roler/schemas build && vitest --changed --coverage",
  "test:ci": "pnpm -w -F @roler/schemas build && vitest --run --reporter=dot --coverage"
  },
  "dependencies": {
    "zod": "^3.25.76",
    "@roler/schemas": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "vitest": "^1.6.1"
  }
}
